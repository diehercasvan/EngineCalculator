<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerDialog"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:gravity="center"
        android:elevation="5dp"
            android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/Btn_Previous"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="left"

            android:layout_margin="5dp"
            android:src="@mipmap/ic_previous"
            android:padding="3dp" />

        <ImageView
            android:id="@+id/Btn_Share"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:src="@mipmap/ic_share"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:padding="3dp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/scrollView3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/title_item1"
                android:id="@+id/textView11"
                android:layout_marginBottom="10dp"
                android:textSize="@dimen/fontSize600" />

            <TextView
                android:id="@+id/textViewResult1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="5dp"
                android:text="@string/message_risk"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/fontSize600"
                android:padding="2dp" />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:max="100"
                android:maxHeight="30dp"
                android:progressDrawable="@drawable/custom_progressbar"
                android:indeterminate="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#FADDDA" />
            <TextView
                android:id="@+id/textViewResult2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="5dp"
                android:text="@string/message_risk1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/fontSize600"
                android:padding="2dp" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:max="100"
                android:maxHeight="30dp"
                android:progressDrawable="@drawable/custom_progressbar"
                android:indeterminate="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#FADDDA" />
            <TextView
                android:id="@+id/textViewResult3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="5dp"
                android:text="@string/message_risk2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/fontSize600"
                android:padding="2dp" />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:max="100"
                android:maxHeight="30dp"
                android:progressDrawable="@drawable/custom_progressbar"
                android:indeterminate="false" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#FADDDA"
                android:layout_marginBottom="5dp" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/message_risk3"
                    android:id="@+id/textView14"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/fontSize600"

                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toStartOf="@+id/container"
                    android:layout_toLeftOf="@+id/container" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/shape"
                    android:id="@+id/container"
                    android:elevation="5dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="5dp"
                    android:gravity="center_vertical|center_horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="400"
                        android:id="@+id/textViewResultYears"
                        android:textStyle="bold"
                        android:textColor="#050505"
                        android:textSize="18dp" />
                </LinearLayout>

            </RelativeLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="textMultiLine"
                android:hint="@string/observations"
                android:ems="10"
                android:textSize="@dimen/fontSize600"
                android:id="@+id/editTextObservation"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp"
                android:layout_weight="0.10" />

        </LinearLayout>
    </ScrollView>

    <ScrollView
            android:id="@+id/scrollView3"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_margin="10dp"
                    android:text="@string/references"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="@dimen/fontSize600"
                    android:textColor="@color/background_material_dark"/>

            <TextView
                    android:id="@+id/textViewReference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/ref1"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textSize="@dimen/fontSizeMin" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>