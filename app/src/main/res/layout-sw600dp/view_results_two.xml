<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:elevation="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/Btn_Previous"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:src="@mipmap/ic_previous" />

        <ImageView
            android:id="@+id/Btn_Share"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:src="@mipmap/ic_share" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_margin="5dp"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_item1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/fontSize600"
            android:layout_margin="5dp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/layout_tittle"
        android:layout_above="@+id/layout_referencias">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|center_horizontal"
            android:orientation="vertical"
            android:padding="5dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/textViewResult1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:text="@string/message_risk"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/fontSize600" />

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:indeterminate="false"
                android:max="100"
                android:maxHeight="30dp"
                android:progressDrawable="@drawable/custom_progressbar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#FADDDA" />

            <TextView
                android:id="@+id/textViewResult2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:text="@string/message_risk1"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/fontSize600" />

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:indeterminate="false"
                android:max="100"
                android:maxHeight="30dp"
                android:progressDrawable="@drawable/custom_progressbar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="#FADDDA" />

            <TextView
                android:id="@+id/textViewResult3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="5dp"
                android:padding="2dp"
                android:text="@string/message_risk2"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="@dimen/fontSize600" />

            <ProgressBar
                android:id="@+id/progressBar3"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="5dp"
                android:indeterminate="false"
                android:max="100"
                android:maxHeight="30dp"
                android:progressDrawable="@drawable/custom_progressbar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="#FADDDA" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="10dp"

                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/container"
                    android:layout_toStartOf="@+id/container"
                    android:text="@string/message_risk3"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/fontSize600"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape"
                    android:elevation="5dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textViewResultYears"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="400"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="#050505"
                        android:textSize="18dp"
                        android:textStyle="bold" />
                </LinearLayout>

            </RelativeLayout>

            <EditText
                android:id="@+id/editTextObservation"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="10dp"
                android:layout_weight="0.10"
                android:ems="10"
                android:hint="@string/observations"
                android:inputType="textMultiLine"
                android:textSize="@dimen/fontSize600" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_referencias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_above="@+id/scrollView8">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:text="@string/references"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/background_material_dark"
            android:textSize="@dimen/fontSize600"
            android:gravity="left" />
    </LinearLayout>

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:id="@+id/scrollView8">


          <LinearLayout
              android:id="@+id/textoReferencias"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

              <TextView
                  android:id="@+id/textViewReference"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="10dp"
                  android:layout_marginBottom="10dp"
                  android:layout_marginLeft="5dp"
                  android:layout_marginRight="5dp"
                  android:layout_marginTop="5dp"
                  android:text="@string/ref1"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textSize="@dimen/fontSize600"
                  android:gravity="left" />
          </LinearLayout>


  </ScrollView>

</RelativeLayout>